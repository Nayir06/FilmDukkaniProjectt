@model List<Director>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h5>Kategori Listesi</h5>
                <a href="/Admin/Director/Create/" class="btn btn-primary btn-sm">Director Oluştur</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Director Id</th>
                        <th>Director Adı</th>
                        <th>Director SoyaAdı</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.DirectorName</td>
                            <td>@item.DirectorLastName</td>


                            <td>
                                <a href="/Admin/Director/Update/@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                <a href="/Admin/Director/Delete/@item.Id" class="btn btn-danger btn-sm">Sil</a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
