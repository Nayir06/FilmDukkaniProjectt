@model List<Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h5>Movie Listesi</h5>
                <a href="/Admin/Movie/Create/" class="btn btn-primary btn-sm">Movie Oluştur</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Movie Id</th>
                        <th>FilmAdı</th>
                        <th>Orjinal FilmAdı</th>
                        <th>Yapım Yılı</th>
                        <th>Film Süresi</th>
                        <th>Image Path</th>
                        

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FılmAdı</td>
                            <td>@item.OrjınalFılmAdı</td>
                            <td>@item.YapımYılı</td>
                            <td>@item.FılmSuresı</td>
                            <td>@item.ImagePath</td>


                            <td>
                                <a href="/Admin/Movie/Update/@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                <a href="/Admin/Movie/Delete/@item.Id" class="btn btn-danger btn-sm">Sil</a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
