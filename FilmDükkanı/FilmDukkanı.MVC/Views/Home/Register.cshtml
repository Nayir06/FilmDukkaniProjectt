@model RegisterVm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div asp-validation-summary="All">
        </div>
        <form asp-action="Register" asp-controller="Home">
            <div class="mb-2">
                <label> Kullanıcı Adı</label>
                <span asp-validation-for="Username"> </span>
                <input class="form-control" asp-for="Username" />
            </div>
            <div class="mb-2">
                <label> Email Adresi</label>
                <span asp-validation-for="Email"> </span>
                <input type="email" class="form-control" asp-for="Email" />
            </div>
            <div class="mb-2">
                <label> Şifre</label>
                <span asp-validation-for="Password"> </span>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
            <div class="mb-2">
                <label> Şifre Onayı</label>
                <span asp-validation-for="ConfirmPassword"> </span>
                <input type="password" class="form-control" asp-for="ConfirmPassword" />
            </div>
          <div class="mb-2">
                <label> Kredi Kartı Numarası</label>
                <span asp-validation-for="CreditCardNumber"> </span>
                <input class="form-control" asp-for="CreditCardNumber" />
            </div> 
            <div class="mb-2">
                <label> Son Kullanma Tarihi</label>
                <span asp-validation-for="CardExpiryDate"> </span>
                <input class="form-control" asp-for="CardExpiryDate" />
            </div>
            <div class="mb-2">
                <label> Cvc Kodu</label>
                <span asp-validation-for="CvcCode"> </span>
                <input class="form-control" asp-for="CvcCode" />
            </div>
            <div class="mb-2">
                <label> Adres </label>
                <span asp-validation-for="Adress"> </span>
                <input class="form-control" asp-for="Adress" />
            </div>
            <div class="mb-2">
                <label> Telefon Numarası </label>
                <span asp-validation-for="PhoneNumber"> </span>
                <input class="form-control" asp-for="PhoneNumber" />
            </div>

            <button type="submit" class="btn btn-primary">Kullanıcı Oluştur</button>

        </form>
    </div>

</div>

